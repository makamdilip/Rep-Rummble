{
  "compilerOptions": {
    "target": "ES2022",
    "lib": ["ES2022", "DOM"],
    "jsx": "react-jsx",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true,
    "rootDir": "src",
    "outDir": "dist",
    "types": ["vite/client"]
  },
  "include": ["src"],
  "exclude": [
    "src/pages/HomeScreen.tsx",
    "src/pages/SnapMealScreen.tsx",
    "src/pages/StreakDashboardScreen.tsx"
  ]
}