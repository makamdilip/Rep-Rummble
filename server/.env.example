# Server Configuration
PORT=5000
NODE_ENV=development

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/rep-rumble
# For MongoDB Atlas: mongodb+srv://<username>:<password>@cluster.mongodb.net/rep-rumble

# JWT Secret (generate with: openssl rand -base64 32)
JWT_SECRET=your_jwt_secret_key_here
JWT_EXPIRE=7d

# CORS Settings
CLIENT_URL=http://localhost:5173

# Google Gemini AI (optional - for server-side AI processing)
GEMINI_API_KEY=your_gemini_api_key_here

# USDA FoodData Central API (optional)
USDA_API_KEY=your_usda_api_key_here
